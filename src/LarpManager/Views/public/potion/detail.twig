{% extends "layout.twig" %}

{% block title %}Potion {{ potion.label }} - Niveau {{ potion.niveau }}{% endblock title %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="{{ path('homepage')  }}">Accueil</a></li>
	<li><a href="{{ path('gn.detail', {'gn' : participant.gn.id}) }}">{{ participant.gn.label }}</a></li>
	<li><a href="{{ path('gn.personnage', {'gn': participant.gn.id}) }}">{{ participant.personnage.nom }}</a></li>
	<li class="active">{{ potion.label }} - Niveau {{ potion.niveau }}</li>
</ol>


<div class="well well-sm">
	<div class="header">
		<h5>{{ potion.label }} - Niveau {{ potion.niveau }}</h5>
	</div>
		
	{{ potion.description|markdown }}

	<div class="list-group-item">
		Si le PDF n'apparait pas correctement dans votre navigateur, <a href="{{ path('participant.potion.document',{'participant': participant.id, 'potion' :potion.id, 'filename': filename}) }}">cliquez ici</a> pour télécharger le fichier.
	</div>
		
	<object type="application/pdf" width="100%" height="1200px" data="{{ path('participant.potion.document',{'participant': participant.id, 'potion' :potion.id, 'filename': filename}) }}">
	</object>

</div>
{% endblock content %}