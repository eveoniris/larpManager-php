{% extends "layout.twig" %}

{% block title %}Gn -- {{ gn.label }}{% endblock title %}

{% block content %}
	<div class="well well-sm clearfix">
		<ol class="breadcrumb">
			<li><a href="{{ path('homepage')  }}">Accueil</a></li>
			<li><a href="{{path('gn.list') }}">Liste des GNs</a></li>
			<li><a href="{{path('gn.detail', {'gn': gn.id}) }}">{{ gn.label }}</a></li>
			<li class="active">Les personnages non joueur</li>
		</ol>
		
		<blockquote>
			Tous les personnages non joueurs participants à {{ gn.label }}
			<small>
				{{ pnjs|length }} PNJs
			</small>
		</blockquote>
	</div>
	
	<div class="well well-sm">
		<div class="white-box">
			{% for pnj in pnjs %}
				{{ pnj.user.email }}
			{% endfor %}
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Nom Prénom</th>
					<th>Email</th>
					<th>Billet</th>
					<th>Groupe</th>
				</tr>
			</thead>
			<tbody>
				{% for pnj in pnjs %}
				<tr>
					<td>{{ pnj.user.etatCivil.nom }} {{ pnj.user.etatCivil.prenom }}</td>
					<td>{{ pnj.user.email }}</td>
					<td>
					{% if pnj.billet %}
						{{ pnj.billet.label }}
					{% else %}
						<span class="text-danger">Aucun billet</span>
					{% endif %}
					</td>
					<td>
						{% if pnj.groupegn %}
							<a href="{{ path('groupe.detail', {'index': pnj.groupegn.groupe.id}) }}">{{ pnj.groupegn.groupe }}</a>
						{% else %}
							<span class="text-danger">Aucun groupe</span>
						{% endif %}
						
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock content %}