{% extends "layout.twig" %}

{% block title %}Titres{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.sort.list') }}">Liste des titres</a></li>
		<li class="active">Modifier un titre</li>
	</ol>
	
	
	<div class="well bs-component">
		<form action="{{ path('titre.admin.update', {'titre': titre.id}) }}" method="POST" {{ form_enctype(form) }} novalidate>
			<fieldset>
				<legend>Modification d'un titre</legend>
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
				
{% endblock content %}