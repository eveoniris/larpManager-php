{% extends "layout.twig" %}

{% block title %}Lieux{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('lieu') }}">Liste des lieux</a></li>
		<li class="active">Ajout d'un lieu</li>
	</ol>
	
	<div class="well bs-component">
		<form action="{{ path('lieu.add') }}" method="POST" {{ form_enctype(form) }}  novalidate>
			<fieldset>
				<legend>Ajout d'un lieu</legend>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
	
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock %}