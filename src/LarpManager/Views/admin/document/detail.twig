{% extends "layout.twig" %}

{% block title %}Documents{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('document') }}">Liste des documents</a></li>
		<li class="active">{{ document.code }}</li>
	</ol>
	
	<div class="row">
		<div class="col-md-8">
			<object type="application/pdf" width="100%" height="800px" >
			   <param name="src" value="{{ path('document.get',{'document': document.documentUrl}) }}" />
			 
			   <p>It appears your Web browser is not configured to display PDF files.
			      No worries, just <a href="{{ path('document.get',{'document': document.documentUrl}) }}">click here to download the PDF file.</a>
			   </p>
 
			</object>
		</div>
		<div class="col-md-4">
			<div class="well bs-component">
				<h4>{{ document.code }} -- {{ document.titre }}</h4>
				<h5>{% if document.impression %}Imprim√©{% else %}Non imprim√©{% endif %}</h5>
				<div class="list-group">
					<div class="list-group-item">
						Auteur : {{ document.auteur }}
					</div>
					<div class="list-group-item">
						Description : {{ document.description|markdown }}
					</div>
					<div class="list-group-item">
						Groupes : 
						{% for groupe in document.groupes %}
							<a href="{{ path('groupe.detail',{'index':groupe.id}) }}">{{ groupe.nom }}</a>, 
						{% endfor %}
					</div>
					<div class="list-group-item">
						Personnages : 
						{% for personnage in document.personnages %}
							<a href="{{ path('personnage.admin.detail',{'personnage':personnage.id}) }}">{% if personnage.vivant == 0 %}üíÄ {% endif %}{{ personnage.nom }}</a>, 
						{% endfor %}
					</div>
					<div class="list-group-item">
						Lieux : {{ document.lieus|join(', ') }}
					</div>
					<div class="list-group-item">
						Cr√©√© par {{ document.user.userName }} le {{ document.creationDate|date('Y-m-d') }}. Modifi√© le {{ document.updateDate|date('Y-m-d') }}
						<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="T√©l√©charger" target="_blank" href="{{ path('document.get',{'document': document.documentUrl}) }}"><i class="fa fa-download"></i></a>
					</div>
				</div>
			</div>
		</div>
		
	</div>
	
{% endblock %}