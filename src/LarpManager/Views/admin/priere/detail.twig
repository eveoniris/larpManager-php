{% extends "layout.twig" %}

{% block title %}Prieres{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.priere.list') }}">Liste des prieres</a></li>
		<li class="active">Détail d'une priere</li>
	</ol>

	<div class="list-group">
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Label</h6></div>
			<div class="list-group-item-text">{{ priere.sphere.label }} - Niveau {{ priere.niveau }}</div>
			<div class="list-group-item-text">{{ priere.label }}</div>
		</div>
		<div class="list-group-item">
			<h4 class="list-group-item-heading">Document</h4>
			<p class="list-group-item-text">
				{% if not priere.documentUrl %}
					Aucun document n'est disponible
				{% else %}
					<a href="{{ path('magie.priere.document',{'priere' :priere.id, 'document':priere.documentUrl}) }}">Téléchargez le document</a>
				{% endif %}
	    	</p>
    	</div>
	</div>
	
	
	
	<div class="panel panel-default">
		<div class="panel-heading"><h4>Description</h4></div>
		<div class="panel-body">
			<p>{{ priere.description|markdown }}</p>
		</div>
	</div>
	
	<div class="panel panel-default">
		<div class="panel-heading"><h4>Annonce</h4></div>
		<div class="panel-body">
			<p>{{ priere.annonce|markdown }}</p>
		</div>
	</div>
	
	<a href="{{ path('magie.priere.update',{'priere':priere.id}) }}"><button class="btn btn-default"><i class="fa fa-pencil"></i> Modifier</button></a>
		
{% endblock content %}