{% extends "layout.twig" %}

{% block title %}Potions{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.potion.list') }}">Liste des potions</a></li>
		<li class="active">Détail d'une potion</li>
	</ol>

	<div class="list-group">
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Label</h6></div>
			<div class="list-group-item-text"><strong>{{ potion.numero }}</strong> -- {{ potion.label }} - Niveau {{ potion.niveau }}</div>
			{% if potion.secret %}<div class="list-group-item-text"><strong><span style="color:red;">&nbsp;(SECRET)&nbsp;</span></strong></div>{% endif %}
		</div>
		<div class="list-group-item">
			<h4 class="list-group-item-heading">Document</h4>
			<p class="list-group-item-text">
				{% if not potion.documentUrl %}
					Aucun document n'est disponible
				{% else %}
					<a href="{{ path('magie.potion.document',{'potion' :potion.id, 'document':potion.documentUrl}) }}">Téléchargez le document</a>
				{% endif %}
	    	</p>
    	</div>
	</div>
	
	
	
	<div class="panel panel-default">
		<div class="panel-heading"><h4>Description</h4></div>
		<div class="panel-body">
			<p>{{ potion.description|markdown }}</p>
		</div>
	</div>
		
{% endblock content %}