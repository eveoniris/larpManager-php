<ul class="list-group">
	{%  if add != false %}
		<a href="{{ path('religion.add') }}" class="list-group-item active">
			<span class="badge"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></span>
			<h4 class="list-group-item-heading">Ajouter une religion</h4>
		</a>
	{%  endif %}
	{%  for religion in religions %}
	<li class="list-group-item">
		<h4 class="list-group-item-heading">
			{{ religion.label }} 
			<div class="btn-group pull-right" role="group" aria-label="...">
				<a href="{{ path('religion.detail', {index: religion.id}) }}" class="btn btn-primary" role="button">DÃ©tail</a>
			    <a href="{{ path('religion.update', {index: religion.id}) }}" class="btn btn-default" role="button">Modifier</a>
			</div>
		</h4>
		<p class="list-group-item-text">		
			{% if religion.description %}
				<p class="text-default">{{ religion.description|markdown }}</p>
			{% else %}
				<p class="text-warning">Attention, cette religion n'a pas de description</p>
			{%  endif %}
		</p>
	</li>
	{%  endfor %}
</ul>