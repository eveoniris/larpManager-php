{% for  annonce in annonces%}
	<div class="panel panel-conan">
		<div class="panel-heading">
			<div class="pull-right">
				<small>publi√© le {{ annonce.updateDate|date('Y-m-d') }}</small>
			</div>
			{{ annonce.title }}
